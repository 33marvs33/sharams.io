				</div>

				<%- include('_form.ejs') %>

				<div class="buttons">
					<!-- <button class="close_button">close</button> -->

					<input type="submit" class="save_button" value="save" />
				</div>
			</form>
		</div>
	</body>
	<script>
		const back_button = document.querySelector(".back_button");
		back_button.addEventListener("click", (e) => {
			e.preventDefault();
			window.location.href = "/home";
		});
	</script>
